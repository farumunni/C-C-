#include <stdio.h>    
int main() {   
    double number;       
    printf("Enter the number: ");
    scanf("%lf", &number);

    if (number <= 0.0){
        if(number == 0.0){
            printf("Number is Zero", number);
        }
        else{
            printf("Number is Negative", number);
        }
        
    }
    else {
        printf("Number is Positive", number);
    }
    return 0;
}
